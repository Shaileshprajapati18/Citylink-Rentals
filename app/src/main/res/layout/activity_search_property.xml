<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/main"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_round"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:src="@drawable/arrow_back_24px"
        android:padding="7dp"
        android:layout_margin="5dp"
        app:tint="@color/black"
        android:contentDescription="@string/back_button_desc"/>

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search location"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="#666666"
        android:iconifiedByDefault="false"
        android:padding="7dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="15dp"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:background="@drawable/search_bar_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical">

        <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clipToPadding="false"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@android:color/white"
                android:background="@drawable/filter_button_selected_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room"
                android:textColor="#666666"
                android:background="@drawable/filter_button_unselected_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="#666666"
                android:background="@drawable/filter_button_unselected_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_commercial_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG"
                android:textColor="#666666"
                android:background="@drawable/filter_button_unselected_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_commercial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Godown"
                android:textColor="#666666"
                android:background="@drawable/filter_button_unselected_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

        </LinearLayout>
    </HorizontalScrollView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
