<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:focusable="true"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:clipToOutline="true"
        app:rippleColor="#E0E0E0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Section -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/property_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_property_placeholder"
                    android:contentDescription="PG Room Image" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="top"
                    android:background="@drawable/top_gradient_overlay" />

                <!-- Top Row - Badges and Favorite -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!-- Verified Badge -->
                        <TextView
                            android:id="@+id/verified_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/verified_badge_bg"
                            android:drawableStart="@drawable/ic_verified"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="VERIFIED"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <!-- Category Badge -->
                        <TextView
                            android:id="@+id/category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/modern_category_bg"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="FOR RENT"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Favorite Heart -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <ImageView
                            android:id="@+id/favorite_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/favorite_24px"
                            app:tint="#FF5252"
                            android:contentDescription="Favorite" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </FrameLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Price and Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/price_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â‚¹10,000"
                        android:textColor="#1A1A1A"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ month"
                        android:visibility="gone"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginStart="4dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status_ready_bg"
                        android:text="Ready to move"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/location_on_24px"
                        app:tint="#757575"
                        android:contentDescription="Location" />

                    <TextView
                        android:id="@+id/location_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Hoshiarpur Village, Noida"
                        android:textColor="#424242"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/furnishing_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/furnished_tag_bg"
                        android:text="Furnished"
                        android:textColor="#FF6D00"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Posted Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Posted 1 week ago"
                        android:textColor="#9E9E9E"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By Owner"
                        android:textColor="#424242"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/view_number_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="View number"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:cornerRadius="12dp"
                        app:strokeColor="#E0E0E0"
                        app:strokeWidth="1dp"
                        android:textColor="#424242"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/whatsapp_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_whatsapp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:iconTint="@color/white"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#25D366"
                        android:contentDescription="WhatsApp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/call_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_call"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:iconTint="@color/white"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#2196F3"
                        android:contentDescription="Call" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>