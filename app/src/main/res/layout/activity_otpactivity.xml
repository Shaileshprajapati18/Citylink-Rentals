<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@android:color/white"
    tools:context=".Activities.OTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="#00000000"
            android:background="@drawable/bg_round_main"
            android:src="@drawable/otp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:padding="24dp">

            <TextView
                android:id="@+id/enterCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/otpInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please type the verification code sent to +91 1234567890"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginTop="4dp" />

            <com.mukeshsolanki.OtpView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:inputType="number"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:cursorVisible="true"
                android:itemBackground="@drawable/item_background"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                app:OtpHideLineWhenFilled="true"
                app:OtpItemCount="6"
                app:OtpItemSpacing="10dp"
                app:OtpItemRadius="5dp"
                app:OtpCursorColor="@color/main_color"
                app:OtpState_filled="true"
                app:OtpViewType="none" />

            <Button
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="CONTINUE"
                android:textColor="@color/white"
                app:cornerRadius="10dp"/>

            <TextView
                android:id="@+id/resendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you didnâ€™t receive a code! Resend"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
