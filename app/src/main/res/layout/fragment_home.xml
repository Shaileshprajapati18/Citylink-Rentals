<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:scrollbars="none"
    android:fillViewport="true"
    android:id="@+id/main"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_header_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/menu_item"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/menu_icon"
                app:tint="@color/black"
                android:layout_gravity="center"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Citylink Rentals"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:background="@drawable/bg_edittext"
                android:backgroundTint="@color/white"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Your New Home"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/rentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_grey"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#94FBBCA8"
                    android:textSize="16sp"
                    android:padding="7dp"
                    android:drawableEnd="@drawable/keyboard_arrow_down_24px"
                    android:textColor="@color/black"
                    android:textColorHint="#E49E89"
                    android:hint="Rent"/>

                <EditText
                    android:id="@+id/cityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_grey"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#94FBBCA8"
                    android:textColorHint="#E49E89"
                    android:textColor="@color/black"
                    android:padding="7dp"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/location_on_24px"
                    android:hint="Enter city"/>

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="SEARCH"
                    android:textSize="16sp"
                    app:cornerRadius="10dp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Property Categories"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="4"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_grey"
                    android:paddingVertical="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/home_24px"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="Room"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_round_grey"
                    android:paddingVertical="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:tint="@color/black"
                        android:src="@drawable/shop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="Shop"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_grey"
                    android:layout_margin="5dp"
                    android:paddingVertical="12dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:tint="@color/black"
                        android:src="@drawable/pg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="PG"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_grey"
                    android:paddingVertical="12dp"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:tint="@color/black"
                        android:src="@drawable/godown"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="Godown"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#FB734A">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <LinearLayout
                            android:id="@+id/textSection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/houseImage"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Looking for Tenants / Buyers ?"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚡ Faster &amp; Verified Tenants/Buyers"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⏺ Pay ZERO brokerage"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="2dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Post FREE Property Ad"
                                android:textAllCaps="false"
                                android:backgroundTint="@android:color/white"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/houseImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/house"
                            android:scaleType="fitCenter"
                            app:tint="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#FB734A">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <LinearLayout
                            android:id="@+id/textSection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/houseImage"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Looking for Tenants / Buyers ?"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚡ Faster &amp; Verified Tenants/Buyers"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⏺ Pay ZERO brokerage"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="2dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Post FREE Property Ad"
                                android:textAllCaps="false"
                                android:backgroundTint="@android:color/white"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/houseImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/house"
                            android:scaleType="fitCenter"
                            app:tint="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#FB734A">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <LinearLayout
                            android:id="@+id/textSection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/houseImage"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Looking for Tenants / Buyers ?"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⚡ Faster &amp; Verified Tenants/Buyers"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⏺ Pay ZERO brokerage"
                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:layout_marginTop="2dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Post FREE Property Ad"
                                android:textAllCaps="false"
                                android:backgroundTint="@android:color/white"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/houseImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/house"
                            android:scaleType="fitCenter"
                            app:tint="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Featured Properties"
                        android:textStyle="bold"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp"
                        android:textColor="@color/main_color"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_stroke"
                    android:padding="5dp"
                    android:layout_marginTop="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_property_placeholder"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spacious 2BHK Apartment"
                            android:textColor="@color/black"
                            android:layout_marginEnd="2dp"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="₹12,000/month"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="Sector 45, Gurgaon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advance: ₹24,000"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_label_background"
                        android:text="BUY-SELL"
                        android:textColor="#FFFFFF"
                        android:padding="4dp"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
