<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    tools:context=".Activities.PropertyDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/main_background_color"
            app:statusBarScrim="@android:color/transparent"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginBottom="24dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/image_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_overlay_gradient"
                app:layout_collapseMode="parallax" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/image_overlay_gradient"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favorite_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/favorite_24px"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp"
                    app:iconTint="#FF5252"
                    app:cornerRadius="20dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/chip_stroke_color"
                    android:contentDescription="Favorite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:padding="24dp"
                android:gravity="center_vertical"
                app:layout_collapseMode="parallax">

                <!-- Category Badge -->
                <TextView
                    android:id="@+id/category_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modern_category_badge"
                    android:text="FOR RENT"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Image Counter -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modern_category_badge"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_image_count"
                        app:tint="@color/white"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/image_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/8"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="none"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Price Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/price_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹70,000"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="per month"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:visibility="gone"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/furnish_status_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/furnish_status_bg"
                            android:text="Semi-Furnished"
                            android:textColor="#FF6D00"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </LinearLayout>

                    <!-- Enhanced Quick Features Grid -->
                    <LinearLayout
                        android:id="@+id/features_row1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Add IDs to each feature layout -->
                        <LinearLayout
                            android:id="@+id/bedrooms_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">


                        <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bed_24px"
                                app:tint="#4CAF50"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/bedrooms_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bedrooms"
                                android:textSize="12sp"
                                android:textColor="#757575" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bathrooms_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bathtub_24px"
                                app:tint="#2196F3"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/bathrooms_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bathrooms"
                                android:textSize="12sp"
                                android:textColor="#757575" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/balconies_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/balcony_24px"
                                app:tint="#FF9800"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/balconies_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balconies"
                                android:textSize="12sp"
                                android:textColor="#757575" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/features_row2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="3"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:id="@+id/kitchen_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/kitchen"
                                app:tint="#E91E63"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/kitchen_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kitchen"
                                android:textSize="11sp"
                                android:textColor="#757575" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/hall_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/hole"
                                app:tint="#607D8B"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/hall_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hall"
                                android:textSize="11sp"
                                android:textColor="#757575" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/parking_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_parking"
                                app:tint="#795548"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/parking_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parking"
                                android:textSize="11sp"
                                android:textColor="#757575" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Complete Property Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Property Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Property Details Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Property Type -->
                        <LinearLayout
                            android:id="@+id/property_type_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Property Type"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/property_type_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Apartment"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <LinearLayout
                            android:id="@+id/property_kind_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Property"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/property_kind_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Commercial"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- BHK Type -->
                        <LinearLayout
                            android:id="@+id/bhk_type_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="BHK Type"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/bhk_type_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3 BHK"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- Carpet Area -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Carpet Area"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/carpet_area_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1200 sq.ft"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- Total Floors -->
                        <LinearLayout
                            android:id="@+id/total_floors_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Floors"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/total_floors_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- Property Facing -->
                        <LinearLayout
                            android:id="@+id/property_facing_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Property Facing"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/property_facing_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="North"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- Ownership Type -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ownership"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/ownership_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Freehold"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- Power Backup -->
                        <LinearLayout
                            android:id="@+id/power_backup_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Power Backup"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/power_backup_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Full"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- Flooring Type -->
                        <LinearLayout
                            android:id="@+id/flooring_type_row"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Flooring"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/flooring_type_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Marble"
                                android:textSize="14sp"
                                android:textColor="#424242"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <!-- Availability Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Status"
                                android:textSize="14sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/status_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ready to move"
                                android:textSize="14sp"
                                android:textColor="#4CAF50"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- About Property Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Property"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/address_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CR Park, Delhi"
                        android:textSize="16sp"
                        android:textColor="#424242"
                        android:fontFamily="sans-serif-medium"
                        android:drawableStart="@drawable/location_on_24px"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This beautiful 3 bhk builder floor for rent in cr park in south delhi is now available. The rent of this property is 70,000 per month with excellent amenities and prime location."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Dealer Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Dealer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/dealer_avatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/profile_image_placeholder"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#E0E0E0"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dealer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/phone_number_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91 98765 43210"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/featured_dealer_badge"
                                android:text="FEATURED DEALER"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:fontFamily="sans-serif-medium"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Modern Bottom Action Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/whatsapp_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="WhatsApp"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                app:icon="@drawable/ic_whatsapp"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="#25D366"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Call Now"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                app:icon="@drawable/ic_call"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="#2196F3"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>