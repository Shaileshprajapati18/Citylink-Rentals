<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/> <!-- Slightly darker grey on press -->
            <stroke android:width="1dp" android:color="#B0B0B0"/> <!-- Darker grey border on press -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="1dp" android:color="#D0D0D0"/> <!-- Light grey border -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
