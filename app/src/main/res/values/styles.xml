<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NavigationMenuTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layoutDirection">ltr</item>

    </style>

    <style name="BottomNavTextActive" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BottomNavTextInactive" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>